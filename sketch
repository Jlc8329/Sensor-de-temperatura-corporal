#include <WiFi.h>
#include <PubSubClient.h>
#include <DHT.h>

// -----------------------------
// CONFIGURAÇÃO DO SENSOR LM35 (OFICIAL DO PROJETO)
// -----------------------------
// LM35 -> usar no protótipo real
// Pino ADC recomendado: GPIO34
#define LM35_PIN 34

// -----------------------------
// SENSOR DHT22 (USADO APENAS PARA SIMULAÇÃO NO WOKWI)
// -----------------------------
#define DHTPIN 4
#define DHTTYPE DHT22
DHT dht(DHTPIN, DHTTYPE);

// -----------------------------
// CONFIGURAÇÃO MQTT / WIFI
// -----------------------------
const char* ssid = "Wokwi-GUEST";
const char* password = "";

const char* mqtt_server = "test.mosquitto.org";
const int mqtt_port = 1883;

const char* temp_topic = "gustavo10290057/paciente/temperatura";
const char* cmd_topic  = "gustavo10290057/paciente/acao";

WiFiClient espClient;
PubSubClient client(espClient);

int ledPin = 13;
unsigned long lastMsg = 0;

void reconnect() {
  while (!client.connected()) {
    Serial.print("Conectando ao MQTT...");
    String clientId = "ESP32_" + String(random(0xffff), HEX);

    if (client.connect(clientId.c_str())) {
      Serial.println("Conectado!");
      client.subscribe(cmd_topic);
    } else {
      Serial.print("Falhou! rc=");
      Serial.println(client.state());
      delay(1500);
    }
  }
}

void setup() {
  Serial.begin(115200);

  // Inicializa DHT apenas na simulação
  dht.begin();

  WiFi.begin(ssid, password);
  Serial.print("Conectando ao WiFi...");
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(300);
  }
  Serial.println("\nWiFi conectado!");

  pinMode(ledPin, OUTPUT);

  client.setServer(mqtt_server, mqtt_port);
}

void loop() {
  if (!client.connected()) reconnect();
  client.loop();

  unsigned long now = millis();
  if (now - lastMsg > 3000) {
    lastMsg = now;

    // ----------------------------------------------
    // LEITURA DO SENSOR LM35 (OFICIAL DO PROJETO)
    // ----------------------------------------------
    int adcValue = analogRead(LM35_PIN);
    float voltage = adcValue * (3.3 / 4095.0); 
    float tempLM35 = voltage * 100.0; // Conversão: 10mV por °C → (V * 100)

    // ----------------------------------------------
    // LEITURA DO SENSOR DHT22 (APENAS PARA SIMULAÇÃO)
    // ----------------------------------------------
    float tempDHT = dht.readTemperature();

    // Se estiver rodando NO WOKWI, o DHT dá leitura válida.
    // Se estiver rodando na placa real, só o LM35 funcionará.
    bool usandoSimulacao = !isnan(tempDHT);

    float temperaturaFinal = usandoSimulacao ? tempDHT : tempLM35;

    // ----------------------------------------------
    // LÓGICA DE ALERTA (FEBRE)
    // ----------------------------------------------
    if (temperaturaFinal > 37.5) {
      Serial.print("FEBRE DETECTADA! Temperatura: ");
      Serial.println(temperaturaFinal);
      digitalWrite(ledPin, HIGH);
    } else {
      Serial.print("Temperatura normal: ");
      Serial.println(temperaturaFinal);
      digitalWrite(ledPin, LOW);
    }

    // ----------------------------------------------
    // PUBLICAR NO MQTT
    // ----------------------------------------------
    char msg[10];
    dtostrf(temperaturaFinal, 4, 2, msg);
    client.publish(temp_topic, msg);

    Serial.print("Publicado no MQTT: ");
    Serial.println(msg);
    Serial.println("-------------------------");
  }
}
